<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="BabySmash.Linux.Shapes.CoolCircle"
             Width="212" Height="212">
    <Canvas x:Name="Circle">
        <Ellipse x:Name="Body" 
                 Width="212" Height="212"
                 StrokeThickness="10" Stroke="Black">
            <Ellipse.Fill>
                <RadialGradientBrush GradientOrigin="0.75,0.25">
                    <GradientStop Offset="0" Color="#FFFFFF00"/>
                    <GradientStop Offset="1" Color="#FF98FF00"/>
                </RadialGradientBrush>
            </Ellipse.Fill>
        </Ellipse>
        
        <!-- Face -->
        <Canvas x:Name="Face">
            <!-- Smile -->
            <Path Fill="Black" 
                  Data="M 124.5,151.5 C 124.5,161.1 116.7,169 107,169 C 97.3,169 89.5,161.1 89.5,151.5 C 89.5,148.7 87.2,146.5 84.5,146.5 C 81.7,146.5 79.5,148.7 79.5,151.5 C 79.5,166.7 91.8,179 107,179 C 122.2,179 134.5,166.7 134.5,151.5 C 134.5,148.7 132.3,146.5 129.5,146.5 C 126.8,146.5 124.5,148.7 124.5,151.5 Z"/>
            <!-- Left Eye -->
            <Canvas x:Name="Eye1">
                <Path StrokeThickness="10" Stroke="Black" StrokeLineCap="Round"
                      Data="M 59,66.4 C 64.5,62 71.5,59.4 79.1,59.4 C 86.7,59.4 93.7,62 99.3,66.4"/>
            </Canvas>
            <!-- Right Eye -->
            <Canvas x:Name="Eye2">
                <Path StrokeThickness="10" Stroke="Black" StrokeLineCap="Round"
                      Data="M 114.7,66.4 C 120.3,62 127.3,59.4 134.9,59.4 C 142.5,59.4 149.5,62 155,66.4"/>
            </Canvas>
        </Canvas>
    </Canvas>
</UserControl>
