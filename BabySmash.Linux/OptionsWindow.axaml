<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="BabySmash.Linux.OptionsWindow"
        Title="BabySmash! Options"
        Width="500" Height="400"
        WindowStartupLocation="CenterScreen"
        CanResize="False"
        Background="#F5F5F5">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="BabySmash! Options" 
                   FontSize="24" 
                   FontWeight="Bold"
                   Margin="0,0,0,20"/>
        
        <!-- Settings -->
        <StackPanel Grid.Row="1" Spacing="15">
            
            <!-- Sound Mode -->
            <StackPanel>
                <TextBlock Text="Sound Mode:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <ComboBox Name="SoundModeCombo" Width="200" HorizontalAlignment="Left">
                    <ComboBoxItem Content="Speech" Tag="Speech"/>
                    <ComboBoxItem Content="Laughter" Tag="Laughter"/>
                    <ComboBoxItem Content="None" Tag="None"/>
                </ComboBox>
            </StackPanel>
            
            <!-- Faces on Shapes -->
            <CheckBox Name="FacesOnShapesCheck" Content="Show faces on shapes"/>
            
            <!-- Fade Away -->
            <CheckBox Name="FadeAwayCheck" Content="Shapes fade away over time"/>
            
            <!-- Clear After -->
            <StackPanel Orientation="Horizontal" Spacing="10">
                <TextBlock Text="Clear old shapes after:" VerticalAlignment="Center"/>
                <NumericUpDown Name="ClearAfterNumeric" 
                               Minimum="5" Maximum="100" 
                               Value="30" 
                               Width="100"/>
                <TextBlock Text="shapes" VerticalAlignment="Center"/>
            </StackPanel>
            
            <!-- Mouse Draw Mode -->
            <CheckBox Name="MouseDrawCheck" Content="Mouse always draws (no click required)"/>
            
        </StackPanel>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Spacing="10"
                    Margin="0,20,0,0">
            <Button Name="SaveButton" Content="Save" Width="80" Classes="accent"/>
            <Button Name="CancelButton" Content="Cancel" Width="80"/>
        </StackPanel>
    </Grid>
</Window>
